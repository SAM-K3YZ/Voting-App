<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/candidate_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/profile"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <EditText
                    android:id="@+id/candidate_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/candidate_image"
                    android:layout_margin="16dp"
                    android:background="@drawable/candidate_input_background"
                    android:hint="@string/candidate_s_name"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey" />

                <EditText
                    android:id="@+id/candidate_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/candidate_name"
                    android:layout_margin="16dp"
                    android:background="@drawable/candidate_input_background"
                    android:hint="@string/candidate_s_level"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey" />

                <!--                <EditText-->
                <!--                    android:id="@+id/candidate_post"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_below="@id/candidate_level"-->
                <!--                    android:layout_margin="16dp"-->
                <!--                    android:background="@drawable/candidate_input_background"-->
                <!--                    android:hint="@string/candidate_s_post"-->
                <!--                    android:padding="15dp"-->
                <!--                    android:textColor="@color/black"-->
                <!--                    android:textColorHint="@color/grey" />-->

                <EditText
                    android:id="@+id/candidate_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/candidate_level"
                    android:layout_margin="16dp"
                    android:background="@drawable/candidate_input_background"
                    android:hint="@string/candidate_s_gender"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey" />

                <EditText
                    android:id="@+id/candidate_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/candidate_gender"
                    android:layout_margin="16dp"
                    android:background="@drawable/candidate_input_background"
                    android:hint="@string/candidate_s_department"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey" />

                <EditText
                    android:id="@+id/candidate_manifesto"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/candidate_department"
                    android:layout_margin="16dp"
                    android:background="@drawable/candidate_input_background"
                    android:hint="@string/candidate_s_manifesto"
                    android:padding="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey" />

                <Spinner
                    android:id="@+id/candidate_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/candidate_manifesto"
                    android:layout_marginTop="16dp"
                    android:padding="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/candidate_spinner"
                    android:layout_marginTop="20dp">

                    <ProgressBar
                        android:id="@+id/createCandidatePB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/candidate_submit_btn"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/black"
                        android:padding="16dp"
                        android:text="@string/add"
                        android:textColor="@color/light_green"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>